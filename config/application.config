# application.config
# Application configuration settings
# All numeric values are in their respective units (seconds, counts, etc.)

# WiFi Network Settings
EPAPER_NETWORK=E-Paper
WIFI_INTERFACE=wlan0
ORIGINAL_NETWORK_FALLBACK=simplisafe

# Network Timing Configuration (seconds)
CONNECTION_WAIT_TIME=15
MAX_RETRIES=3
RETRY_DELAY=5

# E-Paper Device Settings
EPAPER_DEVICE_IP=192.168.3.3
EPAPER_UPLOAD_ENDPOINT=/edit

# Directory Configuration
TEXTS_DIR=texts
SD_CARD_PATH="/Volumes/NO NAME"

# Upload Configuration
UPLOAD_TIMEOUT=90
UPLOAD_DELAY_SECONDS=1

# XTC Conversion Configuration
XTC_FONT_FAMILY=Literata
XTC_FONT_SIZE=16
XTC_LINE_HEIGHT=1.5
XTC_BIT_DEPTH=2
XTC_ORIENTATION=portrait
XTC_ENABLE_DITHERING=True
XTC_ENABLE_NEGATIVE=False
XTC_CONVERSION_TIMEOUT=60
XTC_MAX_PARALLEL_CONVERSIONS=2

# GUI Configuration
GUI_SHOW_RAW_OUTPUT=False
GUI_THEME=light

# Hackaday Scraper
HACKADAY_BLOG_URL=https://hackaday.com/blog/
HACKADAY_FETCH_TIMEOUT=15
HACKADAY_MAX_FILENAME_LENGTH=50
HACKADAY_SUBDIR=hackaday
NUM_HACKADAY_ARTICLES=10

# HCR (Letters from an American) Scraper
HCR_ARCHIVE_URL=https://heathercoxrichardson.substack.com/archive
HCR_SUBDIR=hcr
MAX_HCR_CANDIDATES=25
MIN_LETTER_WORD_COUNT=500
NUM_HCR_POSTS=10

# Hacker News Scraper
HACKERNEWS_SUBDIR=hackernews
HN_API_BASE=https://hacker-news.firebaseio.com/v0
HN_FETCH_TIMEOUT=10
HN_MAX_FILENAME_LENGTH=50
NUM_HN_STORIES=20

